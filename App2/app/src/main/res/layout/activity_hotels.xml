<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg4"
    tools:context=".HotelsActivity"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:layout_gravity="center"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/lavender_border"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hotels"
                android:textAlignment="center"
                android:textColor="@color/dark_blue"
                android:textSize="36sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/numberOfRoomsHotels"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:hint="Rooms"
                android:inputType="number"
                android:minHeight="48dp"
                android:padding="8dp"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/numberOfAdultsHotels"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:hint="Adults"
                android:inputType="number"
                android:minHeight="48dp"
                android:padding="8dp"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/numberOfChildrenHotels"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:hint="Children"
                android:inputType="number"
                android:minHeight="48dp"
                android:padding="8dp"
                android:textColor="@color/black" />

            <AutoCompleteTextView
                android:id="@+id/numberOfStarsHotels"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:hint="Minimum Stars"
                android:inputType="number"
                android:minHeight="48dp"
                android:padding="8dp"
                android:textColor="@color/black" />

            <AutoCompleteTextView
                android:id="@+id/ratingHotels"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:hint="Minimum Rating"
                android:inputType="number"
                android:minHeight="48dp"
                android:padding="8dp"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/priceHotels"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:hint="Maximum Price"
                android:inputType="number"
                android:minHeight="48dp"
                android:padding="8dp"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/searchButtonHotels"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:backgroundTint="@color/dark_blue"
                android:text="Search"
                android:textSize="18sp"
                app:cornerRadius="20dp" />


        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>